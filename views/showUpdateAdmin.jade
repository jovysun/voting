extends layout
block page
block content
  .col-md-4.col-md-offset-4
    h2 Update Admin
    div= error
    div
      form(action="/updateAdmin/#{user._id}", method="POST")
        p
          input.form-control(name="email", type="text", placeholder="13041621@cnsuning.com" value="#{user.email}")
        p
          input.form-control(name="password", type="text", placeholder="123" value="#{user.password}")
        p
          select.form-control(name="role")
            if (user.role == 1)
              option(value="1" selected) Admin 
              option(value="2") Super Admin    
            else
              option(value="1") Admin 
              option(value="2" selected) Super Admin              
  
        p
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit
