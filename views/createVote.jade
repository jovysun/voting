extends layout
block page
  - var menu = 'createVote'
block content
  .col-md-4.col-md-offset-4
    h2 发起投票
    div= error
    div
      form(action="/saveVote", method="POST")
        p
          input.form-control(name="name", type="text", placeholder="投票名称")
        p
          textarea.form-control(name="summary", placeholder="投票简介")    
        p
          button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit
